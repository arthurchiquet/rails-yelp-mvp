<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: [["italian", "italian"], ["japanese", "japanese"], ["french", "french"], ["belgian", "belgian"]] %>
  </div>

  <div class="form-actions bg-dark text-center">
    <%= f.button :submit, "Validate", class:"text-white" %>
  </div>
<% end %>
